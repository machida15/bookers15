<h2>User info</h2>

<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %>

<table class="container">
	<tbody>
		<tr>
			<th> name </th>
			<th><%= user.name %></th>
		</tr>
		<tr>
			<th> introduction </th>
			<th><%= user.introduction %></th>
		</tr>
	</tbody>
</table>

<div class="row">
	<%= link_to "", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_1029" %>
</div>


<h2>New book</h2>


<%= form_for book do |f| %>
	<div class="field row">
		<%= f.label :title %>
		<%= f.text_field :title, class: "col-xs-12"%>
	</div>

	<div class="field row">
		<%= f.label :opinion %>
		<%= f.text_area :body, class: "col-xs-12" %>
	</div>

	<div class="field row">
		<%= f.submit "Create Book", class: "btn btn-info col-xs-12" %>
	</div>
<% end %>
