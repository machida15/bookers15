<div class="container px-5 px-sm-0">
<div class="row">
	<div class="col-md-3">
	<%= render "layouts/lists", user: @book_show.user, book: @book_new	 %>

	</div>
	<br><br>
	<br><br>
	<div class="col-md-8 offset-md-1">
		<h2>Book detail</h2>
		<table class = "table">
			<thead>
				<tr>
					<th></th>
					<th></th>
					<th></th>
					<!-- <th colspan="3"></th> -->
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>
						<%= link_to user_path(@book_show.user) do %>
						<%= attachment_image_tag @book_show.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpeg", size:'40x40'%>
						<% end %>
						<p><%= link_to @user.name, user_path(@user) %></p>
					</td>
					<td><%= link_to @book_show.title, book_path(@book_show) %></td>
					<td><%= @book_show.body %></td>
					<% if current_user == @book_show.user %>
					<td><%= link_to "Edit", edit_book_path(@book_show), class: "btn btn-success" %></td>
					<td><%= link_to "Destroy", book_path(@book_show), method: :delete, class: "btn btn-info", data: { confirm: 'Are you sure?' } %></td>
					<% end %>
				</tr>
			</tbody>
		</table>
	</div>

</div>
</div>